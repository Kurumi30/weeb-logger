{
  "name": "@bsartori/weeb-logger",
  "version": "1.0.11",
  "author": "Bruno Sartori <brunosartori.dev@gmail.com>",
  "license": "MIT",
  "description": "Weeb Logger is a JS Canvas component for logging on devices that are problematic to use debugging tools (specially if you are using some external framework for developing those ahead) like Samsung Tizen, LG webOS or Chromecast. Plus you can customize it with your favorite waifu! :3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "shx mkdir -p dist/assets && shx cp -r ./src/assets/* ./dist/assets",
    "prepublishOnly": "yarn build",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "prepare": "husky"
  },
  "keywords": [
    "logger",
    "typescript",
    "smarttv",
    "chromecast",
    "log",
    "anime",
    "waifu",
    "otaku",
    "weeb",
    "debugging",
    "tizen",
    "webos"
  ],
  "dependencies": {
    "@types/jest": "^29.5.12",
    "chalk": "4.1.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest-mock-import-meta": "1.2.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  }
}
